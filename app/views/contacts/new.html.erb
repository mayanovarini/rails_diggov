<div class="marginall">
  <h2>Contact Us</h2>

    <%= simple_form_for Contact.new, :html => {:class => 'form-horizontal' } do |f| %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, :required => true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.text_field :email, :required => true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :message %><br />
        <%= f.text_area :message, :as => :text, :required => true, class: "form-control" %>
      </div>

      <div class= "hidden">
        <%= f.label :nickname %><br/>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!', class: "form-control" %>
      </div>

      <div class="form-group">
        </br>
        <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
      </div>

    <% end %>
</div>
