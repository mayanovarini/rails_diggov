<div class="marginall">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Party</th>
        <th>Occupation</th>
        <th>Country</th>
        <th>Area</th>
        <th>Wikipage</th>
        <% if user_signed_in? && current_user.admin? %>
          <th colspan="2"></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @politicians.each do |politician| %>
        <tr>
          <td><%= link_to politician.first_name, politician %></td>
          <td><%= link_to politician.last_name, politician %></td>
          <td><%= politician.party %></td>
          <td><%= politician.occupation %></td>
          <td><%= politician.country %></td>
          <td><%= politician.area %></td>
          <td><%= link_to politician.wikipage, politician.wikipage %></td>
          <% if user_signed_in? && current_user.admin? %>
            <td><%= link_to 'Edit', edit_politician_path(politician), class: "btn btn-link" %></td>
            <td><%= link_to 'Destroy', politician, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
